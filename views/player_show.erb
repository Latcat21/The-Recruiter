<body class="py-5">
  <div class="container">
    <h1 class="text-center mt-5">College show page</h1>
      <div class="row">

        <div class="card college-show-card bg-light text-center m-4 col-md-6">
          <div class="card-header">
            <h2>College name <%=@player.school_name%></h2>
          </div>
            <div class="card-body">
              <ul class="list-group list-group-flush">
                <li class="list-group-item">  Name: <%=@player.name%> </li>
                <li class="list-group-item">Location: <%=@location%></li>
              </ul>
        <h5 class="mt-3">Follow & Message them</h5>
        <form action="/colleges/player/<%=@player.id%>/follow" method="POST">
        <div class="row">
        <div class="col">
        <div class="form-group">
        <button class="like-btn btn btn-primary btn-block p-2"><i class=" fas fa-thumbs-up"></i></button>
        </div>
        </div>
        <div class="col">
        <a href="#" class="btn btn-primary btn-block" data-toggle="modal" data-target="#addPostModal">
            <i class="fas fa-plus"></i> message
          </a>
        </div>
        </div>
    </form>
  </div>
</div>


<img src="https://maps.googleapis.com/maps/api/staticmap?center=<%=@modified%>&zoom=8&size=400x400&maptype=roadmap
&markers=color:red%7Clabel:<%=@other_user%>%7C40.<%=@modified%>
&key=AIzaSyAX--aXSI4BhWWyxHFBLCnhg5MdMlHf_qM" alt="google_map" class="google_map">




<div class="modal fade" id="addPostModal">
    <div class="modal-dialog modal-lg">
      <div class="modal-content">
        <div class="modal-header bg-primary text-white">
          <h5 class="modal-title">Message</h5>
         </div>
        <div class="modal-body">
          <form  action="/colleges/player/<%=@player.id%>/message" method="POST">
            <div class="form-group">
              <label for="title">Title</label>
              <input type="text" name="title" class="form-control">
            </div>
           
          <div class="form-group">
              <label for="body">Message</label>
              <textarea name="content" class="form-control"></textarea>
            </div>
         
        </div>
        <div class="modal-footer">
          <button type='submit' class="btn btn-primary" >Send</button>
        </div>
         </form>
      </div>
    </div>
  </div>

</body>
