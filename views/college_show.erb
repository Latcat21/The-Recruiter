<body class="py-5">
<div class="container">

<h1 class="text-center">College show page</h1>
<div class="college-show-card bg-light text-center m-4">
<div class="card" >
  <div class="card-header">
  <h2>School name : <%=@college.school_name%></h2>
  </div>
  <ul class="list-group list-group-flush">
    <li class="list-group-item"> Recruiters name:<%=@college.name%> </li>
    <li class="list-group-item">State : <%=@college.state%></li>
   <li class="list-group-item">City: <%=@college.city%></li>
  </ul>
</div>
 <div class="container">
 <h2 class="p-3">Send them a message</h2>
       <form  action="/players/college/<%=@college.id%>/message" method="POST">
        <div class="form-group">
            <input type="text" name="title" class="form-control">
            </div>
            <div class="form-group">
            <textarea class="form-control" name="content" rows=5></textarea>
          </div>
            <button class="btn btn-primary m-3" >Submit</button>
        </form>
      </div>
</div>
</body>




