<!DOCTYPE html>
<html lang="en">
  <body>
    <div class="college-show shadow-lg p-5 my-4 mt-5 bg-white rounded">
   <% if session[:message] %>
<h6 class="text-secondary text-center <%= session[:message][:status] %>"><%= session[:message][:message] %></h6>
  <% 
    end
    session[:message] = nil 
%>

      <h1 class="py-5 mt-5 text-center"> Welcome to your account</h1>
      
      <section>
        <div class="container">
        <div class="row">
          <div class="col-md-8">
            <div class="card">
              <table class="table table-striped">
                <tbody>
                  <tr>
                      <td>Recruiters Name</td>
                      <td><%= @college.name %></td>
                    <td>
                        <a href="/colleges/<%= @college.id %>/edit" class="btn btn-secondary">
                          <i class="fas fa-angle-double-right"></i> Edit
                        </a>
                    </td>
                  </tr>
                  <tr>
                   <td>School Name</td>
                   <td><%= @college.school_name %></td>
                    <td>
                        <a href="/colleges/<%= @college.id %>/edit" class="btn btn-secondary">
                          <i class="fas fa-angle-double-right"></i> Edit
                        </a>
                    </td>
                  </tr>
                  <tr>
                      <td>State</td>
                    
                   <td>
                      <a href="/colleges/<%= @college.id %>/edit" class="btn btn-secondary">
                        <i class="fas fa-angle-double-right"></i> Edit
                      </a>
                    </td>
                  </tr>
                   <tr>
                      <td>City</td>
                      <td><%= @college.city %></td>
                   <td>
                      <a href="/colleges/<%= @college.id %>/edit" class="btn btn-secondary">
                        <i class="fas fa-angle-double-right"></i> Edit
                      </a>
                    </td>
                  </tr>
                  <tr>
                    
                    <td>
                        <a href="/colleges/<%= @college.id %>/edit" class="btn btn-secondary">
                          <i class="fas fa-angle-double-right"></i> Edit
                        </a>
                    </td>
                  </tr>
                  <tr>
                 </tbody>
              </table>
            </div> 
          </div> 
          <div class="col-md-4">
            <div class="card text-center  mb-3">
              <div class="card-body bg-light">
                <h4>Posistions I Need</h4>
                <i class="fas fa-pencil-alt py-2"></i> 
                <%@positions.each do |position| %>
                  <h5>  <%=position.name%></h5>
                  <% end %>
              <a href="/colleges/<%= @college.id %>/edit" class="btn btn-secondary">
                <i class="fas fa-angle-double-right "></i> Edit</a>
             </div> 
          </div> 
      </div> 
      
      <div class="col-md-4">
     <div class="card text-center bg-light  mb-3">
          <div class="card-body">
            <h4 class="pb-2" >My messages </h4>
            <i class="fas fa-envelope pb-3"></i>
          <% @messages.each do |message| %>
                  <p>Title: <%= message.title%> </p>
                  <p>Content:<%= message.content%> </p>
                <a href="/colleges/account/<%=message.id %>">View</a>
            <% end %>
                 
            </div>
          </div>
        </div>

          <div class="col-md-4">
     <div class="card text-center bg-light  mb-3">
          <div class="card-body">
            <h4 class="pb-2" >Sent messages</h4>
            <i class="fas fa-envelope pb-3"></i>
          <% @sent_messages.each do |message| %>
                  <p>Title: <%= message.title%> </p>
                  <p>Content:<%= message.content%> </p>
                <a href="/colleges/account/<%=message.id %>">View</a>
            <% end %>
                 
            </div>
          </div>
        </div>
      


  <a href="/colleges/matching-players" class="btn btn-secondary btn-block mt-3">
    <i class="fas fa-plus "></i> Find Players That Need you</a>
  </section>
    </div>
  </body>
  </div>
  </html>